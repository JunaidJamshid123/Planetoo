<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/moon_selection_bg"
    tools:context=".presentation.moons.MoonsActivity">

    <!-- Decorative Orbit Ring 1 -->
    <View
        android:id="@+id/orbitPath1"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_gravity="top|end"
        android:layout_marginTop="-170dp"
        android:layout_marginEnd="-170dp"
        android:alpha="0.18"
        android:background="@drawable/orbit_ring" />

    <!-- Decorative Orbit Ring 2 -->
    <View
        android:id="@+id/orbitPath2"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="top|start"
        android:layout_marginTop="20dp"
        android:layout_marginStart="-110dp"
        android:alpha="0.1"
        android:background="@drawable/orbit_ring" />

    <!-- Decorative Planet Icon -->
    <ImageView
        android:id="@+id/decorPlanet"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_gravity="top|end"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="20dp"
        android:alpha="0.85"
        android:src="@drawable/planet_saturn"
        android:contentDescription="Decorative Planet" />

    <!-- Sparkle Star 1 -->
    <ImageView
        android:id="@+id/star1"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_gravity="top|start"
        android:layout_marginTop="95dp"
        android:layout_marginStart="35dp"
        android:alpha="0.6"
        android:src="@drawable/ic_sparkle"
        android:contentDescription="Star" />

    <!-- Sparkle Star 2 -->
    <ImageView
        android:id="@+id/star2"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_gravity="top|end"
        android:layout_marginTop="135dp"
        android:layout_marginEnd="95dp"
        android:alpha="0.4"
        android:src="@drawable/ic_star_small"
        android:contentDescription="Star" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="20dp"
                android:paddingTop="44dp"
                android:paddingBottom="20dp">

                <!-- Back Button -->
                <ImageButton
                    android:id="@+id/backButton"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:background="@drawable/circle_button_bg"
                    android:src="@drawable/ic_arrow_forward"
                    android:rotation="180"
                    android:padding="10dp"
                    app:tint="@android:color/white"
                    android:contentDescription="Back" />

                <!-- Title Section with Planet Icon -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/titleText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Moons"
                            android:textColor="@android:color/white"
                            android:textSize="26sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium"
                            android:shadowColor="#40000000"
                            android:shadowDx="1"
                            android:shadowDy="1"
                            android:shadowRadius="2" />

                        <TextView
                            android:id="@+id/subtitleText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Natural Satellites"
                            android:textColor="#A0FFFFFF"
                            android:textSize="13sp"
                            android:fontFamily="sans-serif" />

                    </LinearLayout>

                    <!-- Planet Icon -->
                    <ImageView
                        android:id="@+id/headerPlanetIcon"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:src="@drawable/moon"
                        android:contentDescription="Planet" />

                </LinearLayout>

            </LinearLayout>

            <!-- Main Content Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/contentCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#16142B"
                app:cardCornerRadius="32dp"
                app:cardElevation="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="16dp"
                    android:paddingTop="24dp"
                    android:paddingBottom="32dp"
                    android:minHeight="500dp">

                    <!-- Search Bar -->
                    <LinearLayout
                        android:id="@+id/searchContainer"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/search_bar_bg"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="16dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_search_purple"
                            android:alpha="0.8" />

                        <EditText
                            android:id="@+id/searchEditText"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="12dp"
                            android:background="@android:color/transparent"
                            android:hint="Search moons..."
                            android:textColorHint="#50FFFFFF"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            android:imeOptions="actionSearch"
                            android:inputType="text"
                            android:fontFamily="sans-serif" />

                    </LinearLayout>

                    <!-- Moon Count and Sort Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="4dp">

                        <TextView
                            android:id="@+id/moonCountText"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="0 moons"
                            android:textColor="#90FFFFFF"
                            android:textSize="13sp"
                            android:fontFamily="sans-serif" />

                        <TextView
                            android:id="@+id/sortText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sort: Size "
                            android:textColor="#BB86FC"
                            android:textSize="12sp"
                            android:fontFamily="sans-serif-medium"
                            android:padding="8dp"
                            android:background="?attr/selectableItemBackgroundBorderless" />

                    </LinearLayout>

                    <!-- Content Area - Use FrameLayout to stack views -->
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="300dp">

                        <!-- SwipeRefreshLayout with RecyclerView -->
                        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                            android:id="@+id/swipeRefresh"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/moonsRecyclerView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:nestedScrollingEnabled="false"
                                android:clipToPadding="false"
                                android:paddingBottom="16dp"
                                tools:listitem="@layout/item_moon" />

                        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

                        <!-- Loading State with Animated Orbiting Moons -->
                    <FrameLayout
                        android:id="@+id/loadingLayout"
                        android:layout_width="match_parent"
                        android:layout_height="220dp"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:gravity="center">

                            <!-- Animated Orbit Container -->
                            <FrameLayout
                                android:layout_width="100dp"
                                android:layout_height="100dp">

                                <!-- Orbit Ring -->
                                <View
                                    android:id="@+id/loadingOrbitRing"
                                    android:layout_width="90dp"
                                    android:layout_height="90dp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/orbit_ring"
                                    android:alpha="0.3" />

                                <!-- Center Planet/Moon -->
                                <ImageView
                                    android:id="@+id/loadingCenterMoon"
                                    android:layout_width="36dp"
                                    android:layout_height="36dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/moon"
                                    android:contentDescription="Loading" />

                                <!-- Orbiting Moon 1 -->
                                <FrameLayout
                                    android:id="@+id/orbitingMoon1Container"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                    <ImageView
                                        android:layout_width="16dp"
                                        android:layout_height="16dp"
                                        android:layout_gravity="top|center_horizontal"
                                        android:src="@drawable/moon"
                                        android:alpha="0.8"
                                        android:contentDescription="Orbiting" />
                                </FrameLayout>

                                <!-- Orbiting Moon 2 -->
                                <FrameLayout
                                    android:id="@+id/orbitingMoon2Container"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:rotation="180">
                                    <ImageView
                                        android:layout_width="12dp"
                                        android:layout_height="12dp"
                                        android:layout_gravity="top|center_horizontal"
                                        android:layout_marginTop="4dp"
                                        android:src="@drawable/moon"
                                        android:alpha="0.6"
                                        android:contentDescription="Orbiting" />
                                </FrameLayout>

                            </FrameLayout>

                            <TextView
                                android:id="@+id/loadingText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:text="Discovering moons..."
                                android:textColor="#B0FFFFFF"
                                android:textSize="14sp"
                                android:fontFamily="sans-serif" />

                            <TextView
                                android:id="@+id/loadingSubtext"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Scanning orbital paths"
                                android:textColor="#60FFFFFF"
                                android:textSize="11sp"
                                android:fontFamily="sans-serif" />

                        </LinearLayout>

                    </FrameLayout>

                    <!-- Empty State -->
                    <LinearLayout
                        android:id="@+id/emptyLayout"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <FrameLayout
                            android:layout_width="70dp"
                            android:layout_height="70dp">
                            
                            <View
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_gravity="center"
                                android:background="@drawable/moon_glow_bg"
                                android:alpha="0.4" />
                            
                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:src="@drawable/moon"
                                android:alpha="0.5"
                                android:contentDescription="No moons" />
                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="No moons found"
                            android:textColor="@android:color/white"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Try adjusting your search"
                            android:textColor="#70FFFFFF"
                            android:textSize="12sp"
                            android:fontFamily="sans-serif" />

                    </LinearLayout>

                    <!-- Error State -->
                    <LinearLayout
                        android:id="@+id/errorLayout"
                        android:layout_width="match_parent"
                        android:layout_height="220dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <FrameLayout
                            android:layout_width="70dp"
                            android:layout_height="70dp">
                            
                            <View
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_gravity="center"
                                android:background="@drawable/moon_glow_bg"
                                android:alpha="0.3" />
                            
                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:src="@drawable/planet_saturn"
                                android:alpha="0.6"
                                android:contentDescription="Error" />
                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="Connection Lost"
                            android:textColor="@android:color/white"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            android:id="@+id/errorMessage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Failed to load moons"
                            android:textColor="#80FFFFFF"
                            android:textSize="12sp"
                            android:gravity="center"
                            android:fontFamily="sans-serif" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/retryButton"
                            android:layout_width="wrap_content"
                            android:layout_height="42dp"
                            android:layout_marginTop="16dp"
                            android:text="Try Again"
                            android:textColor="@android:color/white"
                            android:textSize="13sp"
                            android:paddingHorizontal="24dp"
                            app:backgroundTint="#BB86FC"
                            app:cornerRadius="21dp"
                            app:icon="@drawable/ic_arrow_forward"
                            app:iconGravity="end"
                            app:iconSize="16dp"
                            app:iconTint="@android:color/white" />

                    </LinearLayout>

                    </FrameLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</FrameLayout>