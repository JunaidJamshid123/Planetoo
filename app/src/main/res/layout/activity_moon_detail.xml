<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    android:fitsSystemWindows="true"
    tools:context=".presentation.moons.MoonDetailActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Hero Header Section -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="380dp">

                <!-- Moon Background Image -->
                <ImageView
                    android:id="@+id/moonBackgroundImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/moon_photo"
                    android:contentDescription="Moon" />

                <!-- Gradient Overlay -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/moon_detail_header_gradient" />

                <!-- Back Button -->
                <FrameLayout
                    android:id="@+id/backButton"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/moon_back_button_bg"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackgroundBorderless">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_back_arrow"
                        android:contentDescription="Back" />

                </FrameLayout>

                <!-- Moon Info Overlay at Bottom -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:paddingBottom="70dp"
                    android:paddingHorizontal="20dp">

                    <!-- Moon Name with glow effect -->
                    <TextView
                        android:id="@+id/moonName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="36sp"
                        android:fontFamily="sans-serif-medium"
                        android:letterSpacing="0.05"
                        android:shadowColor="#60000000"
                        android:shadowDx="0"
                        android:shadowDy="3"
                        android:shadowRadius="6"
                        tools:text="Moon" />

                    <!-- Parent Planet Badge -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/planet_badge_bg"
                        android:paddingHorizontal="18dp"
                        android:paddingVertical="10dp">

                        <TextView
                            android:id="@+id/planetEmoji"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            tools:text="ðŸŒ" />

                        <TextView
                            android:id="@+id/parentPlanet"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="Orbits Earth"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif-medium" />

                    </LinearLayout>

                </LinearLayout>

            </FrameLayout>

            <!-- Quick Stats Cards Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="-50dp"
                android:paddingHorizontal="16dp"
                android:gravity="center"
                android:baselineAligned="false">

                <!-- Radius Card -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/moon_stat_card_gradient"
                    android:orientation="vertical"
                    android:paddingVertical="18dp"
                    android:paddingHorizontal="12dp"
                    android:gravity="center"
                    android:elevation="12dp">

                    <!-- Icon with glow -->
                    <FrameLayout
                        android:layout_width="44dp"
                        android:layout_height="44dp">

                        <View
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:background="@drawable/stat_icon_glow" />

                        <ImageView
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_radius"
                            app:tint="#80DEEA"
                            android:contentDescription="Radius" />

                    </FrameLayout>

                    <TextView
                        android:id="@+id/radiusValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-medium"
                        android:maxLines="1"
                        tools:text="1,737 km" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Moon Radius"
                        android:textColor="#B0B0B0"
                        android:textSize="11sp" />

                </LinearLayout>

                <!-- Gravity Card -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:background="@drawable/moon_stat_card_gradient"
                    android:orientation="vertical"
                    android:paddingVertical="18dp"
                    android:paddingHorizontal="12dp"
                    android:gravity="center"
                    android:elevation="12dp">

                    <!-- Icon with glow -->
                    <FrameLayout
                        android:layout_width="44dp"
                        android:layout_height="44dp">

                        <View
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:background="@drawable/stat_icon_glow" />

                        <ImageView
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_gravity"
                            app:tint="#80DEEA"
                            android:contentDescription="Gravity" />

                    </FrameLayout>

                    <TextView
                        android:id="@+id/gravityValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-medium"
                        android:maxLines="1"
                        tools:text="1.62 m/sÂ²" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Gravity"
                        android:textColor="#B0B0B0"
                        android:textSize="11sp" />

                </LinearLayout>

                <!-- Orbit Card -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/moon_stat_card_gradient"
                    android:orientation="vertical"
                    android:paddingVertical="18dp"
                    android:paddingHorizontal="12dp"
                    android:gravity="center"
                    android:elevation="12dp">

                    <!-- Icon with glow -->
                    <FrameLayout
                        android:layout_width="44dp"
                        android:layout_height="44dp">

                        <View
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:background="@drawable/stat_icon_glow" />

                        <ImageView
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_orbit"
                            app:tint="#80DEEA"
                            android:contentDescription="Orbital Period" />

                    </FrameLayout>

                    <TextView
                        android:id="@+id/orbitValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-medium"
                        android:maxLines="1"
                        tools:text="27.32 days" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Orbital Period"
                        android:textColor="#B0B0B0"
                        android:textSize="11sp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Discovery Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/moon_section_card_bg"
                android:orientation="vertical"
                android:padding="20dp"
                android:elevation="6dp">

                <!-- Section Header -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <View
                        android:layout_width="4dp"
                        android:layout_height="22dp"
                        android:background="#80DEEA" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="Discovery"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-medium"
                        android:letterSpacing="0.02" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="18dp"
                    android:baselineAligned="false">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Discovered By"
                            android:textColor="#A0A0A0"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/discoveredBy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:fontFamily="sans-serif-medium"
                            tools:text="Ancient Knowledge" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="end">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Discovery Date"
                            android:textColor="#A0A0A0"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/discoveryDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:textColor="#80DEEA"
                            android:textSize="15sp"
                            android:fontFamily="sans-serif-medium"
                            tools:text="Prehistoric" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- Physical Properties Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/moon_section_card_bg"
                android:orientation="vertical"
                android:padding="20dp"
                android:elevation="6dp">

                <!-- Section Header -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <View
                        android:layout_width="4dp"
                        android:layout_height="22dp"
                        android:background="#80DEEA" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="Physical Properties"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-medium"
                        android:letterSpacing="0.02" />

                </LinearLayout>

                <!-- Row 1: Mass & Density -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="18dp"
                    android:baselineAligned="false">

                    <include
                        android:id="@+id/propertyMass"
                        layout="@layout/item_property_row"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />

                    <include
                        android:id="@+id/propertyDensity"
                        layout="@layout/item_property_row"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <!-- Row 2: Escape Velocity & Temperature -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="14dp"
                    android:baselineAligned="false">

                    <include
                        android:id="@+id/propertyEscape"
                        layout="@layout/item_property_row"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />

                    <include
                        android:id="@+id/propertyTemp"
                        layout="@layout/item_property_row"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

            <!-- Orbital Properties Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/moon_section_card_bg"
                android:orientation="vertical"
                android:padding="20dp"
                android:elevation="6dp">

                <!-- Section Header -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <View
                        android:layout_width="4dp"
                        android:layout_height="22dp"
                        android:background="#80DEEA" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="Orbital Characteristics"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-medium"
                        android:letterSpacing="0.02" />

                </LinearLayout>

                <!-- Row 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="18dp"
                    android:baselineAligned="false">

                    <include
                        android:id="@+id/propertyDistance"
                        layout="@layout/item_property_row"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />

                    <include
                        android:id="@+id/propertyEccentricity"
                        layout="@layout/item_property_row"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <!-- Row 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp"
                    android:baselineAligned="false">

                    <include
                        android:id="@+id/propertyInclination"
                        layout="@layout/item_property_row"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />

                    <include
                        android:id="@+id/propertyRotation"
                        layout="@layout/item_property_row"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

            <!-- Fun Fact Card -->
            <LinearLayout
                android:id="@+id/funFactCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="32dp"
                android:background="@drawable/moon_fun_fact_bg"
                android:orientation="vertical"
                android:padding="20dp"
                android:elevation="8dp">

                <!-- Fun Fact Header -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ’¡"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="Fun Fact"
                        android:textColor="@color/white"
                        android:textSize="17sp"
                        android:fontFamily="sans-serif-medium"
                        android:letterSpacing="0.02" />

                </LinearLayout>

                <TextView
                    android:id="@+id/funFactText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:textColor="#E8F4FD"
                    android:textSize="14sp"
                    android:lineSpacingExtra="5dp"
                    tools:text="Earth's Moon is the only celestial body beyond Earth that humans have visited! It's slowly drifting away from us at about 3.8 cm per year." />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
