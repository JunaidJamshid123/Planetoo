<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/moon_selection_bg"
    tools:context=".presentation.spacex.SpaceMissionsActivity">

    <!-- Decorative Orbit Ring 1 -->
    <View
        android:id="@+id/orbitPath1"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_gravity="top|end"
        android:layout_marginTop="-170dp"
        android:layout_marginEnd="-170dp"
        android:alpha="0.18"
        android:background="@drawable/orbit_ring" />

    <!-- Decorative Orbit Ring 2 -->
    <View
        android:id="@+id/orbitPath2"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="top|start"
        android:layout_marginTop="20dp"
        android:layout_marginStart="-110dp"
        android:alpha="0.1"
        android:background="@drawable/orbit_ring" />

    <!-- Decorative Rocket Icon -->
    <ImageView
        android:id="@+id/decorRocket"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="top|end"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="20dp"
        android:alpha="0.85"
        android:src="@drawable/ic_astronaut"
        android:rotation="15"
        android:contentDescription="Decorative Rocket" />

    <!-- Sparkle Star 1 -->
    <ImageView
        android:id="@+id/star1"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_gravity="top|start"
        android:layout_marginTop="95dp"
        android:layout_marginStart="35dp"
        android:alpha="0.6"
        android:src="@drawable/ic_sparkle"
        android:contentDescription="Star" />

    <!-- Sparkle Star 2 -->
    <ImageView
        android:id="@+id/star2"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_gravity="top|end"
        android:layout_marginTop="135dp"
        android:layout_marginEnd="95dp"
        android:alpha="0.4"
        android:src="@drawable/ic_star_small"
        android:contentDescription="Star" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="20dp"
                android:paddingTop="44dp"
                android:paddingBottom="20dp">

                <!-- Back Button -->
                <ImageButton
                    android:id="@+id/backButton"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:background="@drawable/circle_button_bg"
                    android:src="@drawable/ic_arrow_forward"
                    android:rotation="180"
                    android:padding="10dp"
                    app:tint="@android:color/white"
                    android:contentDescription="Back" />

                <!-- Title Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SPACEX"
                            android:textColor="#80DEEA"
                            android:textSize="12sp"
                            android:letterSpacing="0.15"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            android:id="@+id/titleText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Space Missions"
                            android:textColor="@android:color/white"
                            android:textSize="26sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium"
                            android:shadowColor="#40000000"
                            android:shadowDx="1"
                            android:shadowDy="1"
                            android:shadowRadius="2" />

                        <TextView
                            android:id="@+id/subtitleText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Explore launches, crew &amp; rockets"
                            android:textColor="#A0FFFFFF"
                            android:textSize="13sp"
                            android:fontFamily="sans-serif" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- Main Content Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/contentCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#16142B"
                app:cardCornerRadius="32dp"
                app:cardElevation="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="16dp"
                    android:paddingTop="28dp"
                    android:paddingBottom="40dp"
                    android:minHeight="500dp">

                    <!-- Section Title -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Choose a Category"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="20dp"
                        android:paddingHorizontal="4dp" />

                    <!-- Latest Launch Card -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardLatestLaunch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="16dp"
                            android:gravity="center_vertical"
                            android:background="@drawable/planet_list_card_bg">

                            <FrameLayout
                                android:layout_width="56dp"
                                android:layout_height="56dp">

                                <View
                                    android:layout_width="52dp"
                                    android:layout_height="52dp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/moon_glow_bg"
                                    android:alpha="0.5" />

                                <FrameLayout
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/moon_icon_circle_bg">

                                    <ImageView
                                        android:layout_width="28dp"
                                        android:layout_height="28dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/latest_lunch"
                                        android:contentDescription="Latest Launch" />

                                </FrameLayout>

                            </FrameLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginStart="14dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Latest Launch"
                                    android:textColor="@android:color/white"
                                    android:textSize="17sp"
                                    android:textStyle="bold"
                                    android:fontFamily="sans-serif-medium" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="View the most recent SpaceX launch"
                                    android:textColor="#80DEEA"
                                    android:textSize="12sp"
                                    android:fontFamily="sans-serif" />

                            </LinearLayout>

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginStart="8dp"
                                android:src="@drawable/ic_chevron_right"
                                android:alpha="0.6"
                                android:contentDescription="View" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Upcoming Launches Card -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardUpcomingLaunches"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="16dp"
                            android:gravity="center_vertical"
                            android:background="@drawable/planet_list_card_bg">

                            <FrameLayout
                                android:layout_width="56dp"
                                android:layout_height="56dp">

                                <View
                                    android:layout_width="52dp"
                                    android:layout_height="52dp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/moon_glow_bg"
                                    android:alpha="0.5" />

                                <FrameLayout
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/moon_icon_circle_bg">

                                    <ImageView
                                        android:layout_width="28dp"
                                        android:layout_height="28dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/upcomming_lunches"
                                        android:contentDescription="Upcoming" />

                                </FrameLayout>

                            </FrameLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginStart="14dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Upcoming Launches"
                                    android:textColor="@android:color/white"
                                    android:textSize="17sp"
                                    android:textStyle="bold"
                                    android:fontFamily="sans-serif-medium" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="See scheduled future missions"
                                    android:textColor="#80DEEA"
                                    android:textSize="12sp"
                                    android:fontFamily="sans-serif" />

                            </LinearLayout>

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginStart="8dp"
                                android:src="@drawable/ic_chevron_right"
                                android:alpha="0.6"
                                android:contentDescription="View" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Past Launches Card -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardPastLaunches"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="16dp"
                            android:gravity="center_vertical"
                            android:background="@drawable/planet_list_card_bg">

                            <FrameLayout
                                android:layout_width="56dp"
                                android:layout_height="56dp">

                                <View
                                    android:layout_width="52dp"
                                    android:layout_height="52dp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/moon_glow_bg"
                                    android:alpha="0.5" />

                                <FrameLayout
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/moon_icon_circle_bg">

                                    <ImageView
                                        android:layout_width="28dp"
                                        android:layout_height="28dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/past_lunches"
                                        android:contentDescription="Past" />

                                </FrameLayout>

                            </FrameLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginStart="14dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Past Launches"
                                    android:textColor="@android:color/white"
                                    android:textSize="17sp"
                                    android:textStyle="bold"
                                    android:fontFamily="sans-serif-medium" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="Explore mission history"
                                    android:textColor="#BB86FC"
                                    android:textSize="12sp"
                                    android:fontFamily="sans-serif" />

                            </LinearLayout>

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginStart="8dp"
                                android:src="@drawable/ic_chevron_right"
                                android:alpha="0.6"
                                android:contentDescription="View" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Crew Members Card -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardCrew"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="16dp"
                            android:gravity="center_vertical"
                            android:background="@drawable/planet_list_card_bg">

                            <FrameLayout
                                android:layout_width="56dp"
                                android:layout_height="56dp">

                                <View
                                    android:layout_width="52dp"
                                    android:layout_height="52dp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/moon_glow_bg"
                                    android:alpha="0.5" />

                                <FrameLayout
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/moon_icon_circle_bg">

                                    <ImageView
                                        android:layout_width="28dp"
                                        android:layout_height="28dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/crew_members"
                                        android:contentDescription="Crew" />

                                </FrameLayout>

                            </FrameLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginStart="14dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Crew Members"
                                    android:textColor="@android:color/white"
                                    android:textSize="17sp"
                                    android:textStyle="bold"
                                    android:fontFamily="sans-serif-medium" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="Meet the astronauts"
                                    android:textColor="#FFB74D"
                                    android:textSize="12sp"
                                    android:fontFamily="sans-serif" />

                            </LinearLayout>

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginStart="8dp"
                                android:src="@drawable/ic_chevron_right"
                                android:alpha="0.6"
                                android:contentDescription="View" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Rockets Card -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardRockets"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="16dp"
                            android:gravity="center_vertical"
                            android:background="@drawable/planet_list_card_bg">

                            <FrameLayout
                                android:layout_width="56dp"
                                android:layout_height="56dp">

                                <View
                                    android:layout_width="52dp"
                                    android:layout_height="52dp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/moon_glow_bg"
                                    android:alpha="0.5" />

                                <FrameLayout
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/moon_icon_circle_bg">

                                    <ImageView
                                        android:layout_width="28dp"
                                        android:layout_height="28dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/rockets"
                                        android:contentDescription="Rockets" />

                                </FrameLayout>

                            </FrameLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginStart="14dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Rockets"
                                    android:textColor="@android:color/white"
                                    android:textSize="17sp"
                                    android:textStyle="bold"
                                    android:fontFamily="sans-serif-medium" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="SpaceX rocket fleet"
                                    android:textColor="#4FC3F7"
                                    android:textSize="12sp"
                                    android:fontFamily="sans-serif" />

                            </LinearLayout>

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginStart="8dp"
                                android:src="@drawable/ic_chevron_right"
                                android:alpha="0.6"
                                android:contentDescription="View" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- SpaceX Info -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Powered by SpaceX API"
                            android:textColor="#60FFFFFF"
                            android:textSize="12sp"
                            android:fontFamily="sans-serif" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="api.spacexdata.com"
                            android:textColor="#40FFFFFF"
                            android:textSize="11sp"
                            android:fontFamily="sans-serif" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</FrameLayout>
