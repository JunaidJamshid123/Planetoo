<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/primary"
    android:layout_height="match_parent"
    tools:context=".presentation.home.HomeActivity">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/barbackground"
        android:orientation="vertical"
        android:paddingBottom="15dp"
        android:layout_height="wrap_content">
        
        <TextView
            android:layout_width="match_parent"
            android:text="SolarScope"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:gravity="start"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:textStyle="bold"
            android:layout_height="wrap_content" />
        
        <TextView
            android:layout_width="match_parent"
            android:text="Explore the Solar System"
            android:textColor="@color/subtext"
            android:textSize="14sp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="-2dp"
            android:layout_height="wrap_content" />

        <!-- Search Bar -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="15dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/secondry">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_search"
                    android:contentDescription="Search"
                    app:tint="@color/subtext" />

                <EditText
                    android:id="@+id/searchEditText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="12dp"
                    android:background="@android:color/transparent"
                    android:hint="Search planets..."
                    android:textColorHint="@color/subtext"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:inputType="text"
                    android:imeOptions="actionSearch"
                    android:maxLines="1" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!-- Planet Count -->
    <TextView
        android:id="@+id/planetCountText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="10 Celestial Bodies"
        android:textColor="@color/subtext"
        android:textSize="13sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp" />

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        tools:listitem="@layout/view"
        android:id="@+id/MyRecyclearView"
        android:clipToPadding="false"
        android:paddingBottom="16dp"
        android:layout_height="match_parent" />
        
</LinearLayout>