<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="@drawable/moon_card_bg">

        <!-- Moon Icon Container -->
        <FrameLayout
            android:layout_width="58dp"
            android:layout_height="58dp">

            <!-- Glow Effect -->
            <View
                android:id="@+id/moonGlow"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:layout_gravity="center"
                android:background="@drawable/moon_glow_bg"
                android:alpha="0.5" />

            <!-- Moon Icon Circle -->
            <FrameLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/moon_icon_circle_bg">

                <ImageView
                    android:id="@+id/moonIcon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/moon"
                    android:contentDescription="Moon Icon" />

            </FrameLayout>

        </FrameLayout>

        <!-- Moon Info Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="14dp">

            <!-- Moon Name Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/moonName"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:maxLines="1"
                    android:ellipsize="end"
                    tools:text="Europa" />

                <!-- Size Badge -->
                <TextView
                    android:id="@+id/sizeBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/badge_size_large"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="3dp"
                    android:textColor="@android:color/white"
                    android:textSize="9sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.05"
                    tools:text="LARGE" />

            </LinearLayout>

            <!-- Parent Planet Row -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="4dp">

                <ImageView
                    android:id="@+id/parentPlanetIcon"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/planet_jupiter"
                    android:contentDescription="Planet" />

                <TextView
                    android:id="@+id/parentPlanet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:textColor="#80DEEA"
                    android:textSize="12sp"
                    android:fontFamily="sans-serif"
                    tools:text="Jupiter" />

            </LinearLayout>

            <!-- Stats Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <!-- Radius Stat -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginEnd="20dp">

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/ic_radius"
                        android:contentDescription="Radius" />

                    <TextView
                        android:id="@+id/moonRadius"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:textColor="#B0FFFFFF"
                        android:textSize="12sp"
                        android:fontFamily="sans-serif"
                        tools:text="1,560 km" />

                </LinearLayout>

                <!-- Orbit Stat -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/ic_orbit"
                        android:contentDescription="Orbit" />

                    <TextView
                        android:id="@+id/moonOrbit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:textColor="#B0FFFFFF"
                        android:textSize="12sp"
                        android:fontFamily="sans-serif"
                        tools:text="3.55 days" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Arrow Indicator -->
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_chevron_right"
            android:alpha="0.6"
            android:contentDescription="View details" />

    </LinearLayout>

</androidx.cardview.widget.CardView>