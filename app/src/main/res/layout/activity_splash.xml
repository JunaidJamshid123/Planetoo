<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_gradient_bg"
    tools:context=".presentation.splash.SplashActivity">

    <!-- Orbit Path 1 - Large outer -->
    <View
        android:id="@+id/orbitPath1"
        android:layout_width="450dp"
        android:layout_height="450dp"
        android:layout_gravity="center"
        android:layout_marginTop="-80dp"
        android:layout_marginEnd="-120dp"
        android:alpha="0.2"
        android:background="@drawable/orbit_ring" />

    <!-- Orbit Path 2 - Medium -->
    <View
        android:id="@+id/orbitPath2"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:layout_marginTop="-40dp"
        android:layout_marginEnd="-80dp"
        android:alpha="0.15"
        android:background="@drawable/orbit_ring" />

    <!-- Saturn - Top Left Area -->
    <ImageView
        android:id="@+id/satellite"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_gravity="top|start"
        android:layout_marginStart="30dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/saturn"
        android:contentDescription="Saturn" />

    <!-- Moon - Top Right -->
    <ImageView
        android:id="@+id/moonLarge"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_gravity="top|end"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="40dp"
        android:src="@drawable/moon"
        android:contentDescription="Moon" />

    <!-- Main Content Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="32dp">

        <!-- Main Title -->
        <TextView
            android:id="@+id/splashTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:letterSpacing="0.02"
            android:text="EXPLORE SOLAR\nSYSTEM"
            android:textColor="@android:color/white"
            android:textSize="28sp"
            android:lineSpacingExtra="6dp" />

        <!-- Subtitle with Arrow -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/splashSubtitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Let's see what in Space"
                android:textColor="#B0FFFFFF"
                android:textSize="15sp" />

            <!-- Arrow Button -->
            <FrameLayout
                android:id="@+id/arrowButton"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:layout_marginStart="16dp"
                android:background="@drawable/arrow_button_bg"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_arrow_forward"
                    android:contentDescription="Continue"
                    app:tint="#333366" />
            </FrameLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Earth - Bottom Center (main showcase) -->
    <ImageView
        android:id="@+id/astronaut"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="80dp"
        android:src="@drawable/earth"
        android:contentDescription="Earth" />

</FrameLayout>
