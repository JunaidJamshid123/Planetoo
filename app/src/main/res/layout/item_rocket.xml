<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/planet_list_card_bg">

        <!-- Rocket Image -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginBottom="12dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#1A1744">

                <ImageView
                    android:id="@+id/rocketImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_satellite"
                    android:contentDescription="Rocket Image" />

            </androidx.cardview.widget.CardView>

        </FrameLayout>

        <!-- Rocket Name -->
        <TextView
            android:id="@+id/rocketName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            tools:text="Falcon 9" />

        <!-- Company & Country -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/rocketCompany"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#80DEEA"
                android:textSize="13sp"
                android:fontFamily="sans-serif"
                tools:text="SpaceX" />

            <View
                android:layout_width="4dp"
                android:layout_height="4dp"
                android:layout_marginHorizontal="8dp"
                android:background="@drawable/loading_dot"
                android:alpha="0.5" />

            <TextView
                android:id="@+id/rocketCountry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#A0FFFFFF"
                android:textSize="13sp"
                android:fontFamily="sans-serif"
                tools:text="United States" />

        </LinearLayout>

        <!-- Stats Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <!-- Height -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/rocketHeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="70m" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Height"
                    android:textColor="#70FFFFFF"
                    android:textSize="11sp" />

            </LinearLayout>

            <!-- Success Rate -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/rocketSuccessRate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#4CAF50"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="98%" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Success"
                    android:textColor="#70FFFFFF"
                    android:textSize="11sp" />

            </LinearLayout>

            <!-- Cost -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/rocketCost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFB74D"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="$67M" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cost/Launch"
                    android:textColor="#70FFFFFF"
                    android:textSize="11sp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Active Badge -->
        <TextView
            android:id="@+id/rocketStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:paddingHorizontal="12dp"
            android:paddingVertical="4dp"
            android:background="@drawable/badge_size_large"
            android:textColor="@android:color/white"
            android:textSize="11sp"
            android:textStyle="bold"
            android:letterSpacing="0.05"
            tools:text="ACTIVE" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
