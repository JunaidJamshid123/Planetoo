<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="14dp"
        android:gravity="center_vertical"
        android:background="@drawable/planet_list_card_bg">

        <!-- Planet Icon Container -->
        <FrameLayout
            android:layout_width="62dp"
            android:layout_height="62dp">

            <!-- Glow Effect -->
            <View
                android:id="@+id/planetGlow"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:layout_gravity="center"
                android:background="@drawable/moon_glow_bg"
                android:alpha="0.5" />

            <!-- Planet Icon Circle -->
            <FrameLayout
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:layout_gravity="center"
                android:background="@drawable/moon_icon_circle_bg">

                <ImageView
                    android:id="@+id/planetImage"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center"
                    android:src="@drawable/earth"
                    android:contentDescription="Planet Icon" />

            </FrameLayout>

        </FrameLayout>

        <!-- Planet Info Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="14dp">

            <!-- Planet Name Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/planetName"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:maxLines="1"
                    android:ellipsize="end"
                    tools:text="Neptune" />

            </LinearLayout>

            <!-- Galaxy Row -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/planetGalaxy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#80DEEA"
                    android:textSize="12sp"
                    android:fontFamily="sans-serif"
                    tools:text="Milky Way Galaxy" />

            </LinearLayout>

            <!-- Stats Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <!-- Distance Stat -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginEnd="20dp">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_distance"
                        android:contentDescription="Distance" />

                    <TextView
                        android:id="@+id/planetDistance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:textColor="#B0FFFFFF"
                        android:textSize="12sp"
                        android:fontFamily="sans-serif"
                        tools:text="4,497 M km" />

                </LinearLayout>

                <!-- Gravity Stat -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_gravity"
                        android:contentDescription="Gravity" />

                    <TextView
                        android:id="@+id/planetGravity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:textColor="#B0FFFFFF"
                        android:textSize="12sp"
                        android:fontFamily="sans-serif"
                        tools:text="11.15 m/sÂ²" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Arrow Indicator -->
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_chevron_right"
            android:alpha="0.6"
            android:contentDescription="View details" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
