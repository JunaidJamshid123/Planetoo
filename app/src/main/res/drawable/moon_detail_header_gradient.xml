<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Dark vignette at top for status bar -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="270"
                android:startColor="#90000000"
                android:centerColor="#00000000"
                android:endColor="#00000000"
                android:centerY="0.25" />
        </shape>
    </item>
    <!-- Main gradient from transparent to primary color -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="270"
                android:startColor="#00333366"
                android:centerColor="#40333366"
                android:endColor="#FF333366"
                android:centerY="0.6" />
        </shape>
    </item>
</layer-list>
